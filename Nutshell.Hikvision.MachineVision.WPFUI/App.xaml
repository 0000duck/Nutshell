                                <ResourceDictionary
                                        Source="pack://application:,,,/Nutshell.Presentation.MahApps;component/Styles/GridStyle.xaml" />
                                <ResourceDictionary
                                        Source="pack://application:,,,/Nutshell.Presentation.MahApps;component/Styles/ButtonStyle.xaml" />
                                <ResourceDictionary
                                        Source="pack://application:,,,/Nutshell.Presentation.MahApps;component/Styles/TextBlockStyle.xaml" />

                                <ResourceDictionary
                                        Source="pack://application:,,,/Nutshell.Presentation.Bootstrap;component/Styles/Bootstrap.xaml" />

                                <ResourceDictionary Source="Resources/DataTemplate/MachineVisionRuntimeDataTemplate.xaml" />
                        </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
        </Application.Resources>
</Application>