<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls">

        <ResourceDictionary.MergedDictionaries>
                <!-- MahApps.Metro resource dictionaries. Make sure that all file names are Case Sensitive! -->
                <ResourceDictionary Source="pack://application:,,,/Nutshell.Presentation.MahApps;component/Styles/MetroWindowStyle.xaml" />
        </ResourceDictionary.MergedDictionaries>
        <Style x:Key="BlackWindowStyle" TargetType="controls:MetroWindow" BasedOn="{StaticResource MetroWindowStyle}">
                <Setter Property="Foreground" Value="Azure" />
                <Setter Property="Background" Value="Black" />
                <Setter Property="ShowMinButton" Value="False"/>
                <Setter Property="ShowInTaskbar" Value="False"/>
                <Setter Property="ResizeMode" Value="NoResize" />
        </Style>
</ResourceDictionary>