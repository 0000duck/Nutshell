<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


        <Style x:Key="WindowStyle" TargetType="Window">
                <Setter Property="Foreground" Value="DodgerBlue" />
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="FontSize" Value="24" />
        </Style>

        <Style x:Key="TransparencyWindowStyle" TargetType="Window" BasedOn="{StaticResource WindowStyle}">
                <Setter Property="WindowStyle" Value="None" />
                <Setter Property="AllowsTransparency" Value="True" />
                <Setter Property="ResizeMode" Value="NoResize" />
        </Style>


        <Style x:Key="DialogStyle" TargetType="Window" BasedOn="{StaticResource TransparencyWindowStyle}">
                <Setter Property="MinWidth" Value="1136" />
                <Setter Property="Width" Value="1136" />
                <Setter Property="MinHeight" Value="300" />
                <Setter Property="Height" Value="Auto" />
                <Setter Property="SizeToContent" Value="WidthAndHeight" />
        </Style>


</ResourceDictionary>