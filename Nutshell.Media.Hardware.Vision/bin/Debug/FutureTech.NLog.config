<?xml version="1.0" encoding="utf-8"?>

<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
        <!--说明
                Debug级别：输出不用记录到日志的调试信息
                Info级别： 输出需要记录到日志的信息
                Warn级别： 输出不正确但不影响程序继续运行的警告信息
                Error级别：输出不正确导致程序无法继续运行但是被程序本身检查到的信息（例如，在可能发生异常的位置拦截的异常）
                Fatal级别：输出不正确导致程序无法继续运行而且程序本身未检查到的信息（例如，程序全局异常处理位置拦截的异常）
                -->
        <targets>
                <target xsi:type="Debugger" name="GlobalLoger"
                        layout="${longdate}    ${uppercase:${level}}    ${message}" />
                <target xsi:type="File" name="NLogInfoFile" fileName="${basedir}/日志/${shortdate}/全部信息.log"
                        layout="${longdate}    ${uppercase:${level}}    ${message}" />
                <target xsi:type="File" name="NLogWarnFile" fileName="${basedir}/日志/${shortdate}/全部警告.log"
                        layout="${longdate}    ${uppercase:${level}}    ${message}" />
                <target xsi:type="File" name="NLogErrorFile" fileName="${basedir}/日志/${shortdate}/全部错误.log"
                        layout="${longdate}    ${uppercase:${level}}    ${message}" />
                <target xsi:type="File" name="NLogFatalFile" fileName="${basedir}/日志/${shortdate}/全部故障.log"
                        layout="${longdate}    ${uppercase:${level}}    ${message}" />
        </targets>
        <rules>
                <logger name="*" minlevel="Debug" writeTo="GlobalLoger" />
                <logger name="*" minlevel="Info" writeTo="NLogInfoFile" />
                <logger name="*" level="Warn" writeTo="NLogWarnFile" />
                <logger name="*" level="Error" writeTo="NLogErrorFile" />
                <logger name="*" level="Fatal" writeTo="NLogFatalFile" />
        </rules>
</nlog>