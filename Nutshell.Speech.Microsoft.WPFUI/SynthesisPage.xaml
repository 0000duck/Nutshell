      Title="SynthesisPage" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

        <Grid>
                <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" Name="MainTextBox"/>
